@{
    Layout = "~/Views/Shared/RegistrationLogIn.cshtml";
}
@model App.Models.userRegister

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registration Form</h3>

                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div class="alert alert-danger" role="alert">
                                @Html.Raw(ViewBag.ErrorMessage)
                            </div>
                        }

                        <form method="post" class="needs-validation" id="registrationForm" novalidate>
                            @Html.AntiForgeryToken()

                            <div class="row">
                                <div class="col-md-12 mb-4">
                                    <div class="form-outline">
                                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-lg", id = "username", required = "required" })
                                        <label class="form-label" for="username">Username</label>
                                        <div class="valid-feedback">Valid.</div>
                                        <div class="invalid-feedback">Please fill out this field.</div>
                                        @Html.ValidationMessageFor(m => m.Username)
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 mb-4">
                                    <div class="form-outline">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", id = "emailAddress", required = "required" })
                                        <label class="form-label" for="emailAddress">Email</label>
                                        <div class="valid-feedback">Valid.</div>
                                        <div class="invalid-feedback">Please fill out this field.</div>
                                        @Html.ValidationMessageFor(m => m.Email)
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 mb-4">
                                    <div class="form-outline">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", id = "password", required = "required" })
                                        <label class="form-label" for="password">Password</label>
                                        <div class="valid-feedback">Valid.</div>
                                        <div class="invalid-feedback">Please fill out this field.</div>
                                        @Html.ValidationMessageFor(m => m.Password)
                                    </div>
                                </div>
                            </div>

                            <div class="mt-4 pt-2">
                                <input class="btn btn-primary btn-lg" type="submit" value="Register" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
