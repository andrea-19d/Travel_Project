@{
    ViewBag.Title = "My Account";
}
@model App.Models.user

<body class="g-sidenav-show bg-gray-100">
    <div class="main-content position-relative max-height-vh-100 h-100">
        <div class="card shadow-lg mx-4 card-profile-bottom">
            <div class="card-body p-3">
                <div class="row gx-4">
                    <div class="col-auto">
                        <div class="avatar avatar-xl position-relative">
                            @if (!string.IsNullOrEmpty(ViewBag.UserPhoto))
                            {
                                <img src="data:image/jpeg;base64,@ViewBag.UserPhoto" id="output" width="100" height="100" alt="User Photo" style="border-radius: 50%;" />
                            }
                            else
                            {
                                <!-- No photo available message -->
                                <input type="hidden" id="currentProfilePicture" name="CurrentProfilePicture" value="@ViewBag.UserPhoto" />
                            }
                        </div>
                    </div>

                    <div class="col-auto my-auto">
                        <div class="h-100">
                            <h5 class="mb-1">@ViewBag.Username</h5>
                            <p class="mb-0 font-weight-bold text-sm">@ViewBag.Role</p>
                        </div>
                    </div>
                    @* User information *@
                    <div class="container-fluid py-4">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="card">
                                    <div class="card-header pb-0">
                                        <div class="d-flex align-items-center">
                                            <p class="mb-0">Profile Details</p>
                                            <button id="editButton" class="btn btn-primary btn-sm ms-auto">Edit</button>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <form id="profileForm" method="post" action="@Url.Action("UpdateUserProfile", "MyProfilePage")">

                                            <p class="text-uppercase text-sm">User Information</p>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="username" class="form-control-label">Username</label>
                                                        <input id="username" class="form-control" type="text" value="@ViewBag.Username" name="Username" disabled>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="email" class="form-control-label">Email</label>
                                                        <input id="email" class="form-control" type="email" value="@ViewBag.Email" name="Email" disabled>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="firstName" class="form-control-label">First name</label>
                                                        <input id="firstName" class="form-control" type="text" value="@ViewBag.UserFirstName" name="FirstName" disabled>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="lastName" class="form-control-label">Last name</label>
                                                        <input id="lastName" class="form-control" type="text" value="@ViewBag.UserLastName" name="LastName" disabled>
                                                    </div>
                                                </div>
                                            </div>
                                            <hr class="horizontal dark">
                                            <p class="text-uppercase text-sm">Contact Information</p>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="address" class="form-control-label">Address</label>
                                                        <input id="address" class="form-control" type="text" value="Bld Mihail Kogalniceanu, nr. 8 Bl 1, Sc 1, Ap 09" disabled>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label for="city" class="form-control-label">City</label>
                                                        <input id="city" class="form-control" type="text" value="New York" disabled>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label for="country" class="form-control-label">Country</label>
                                                        <input id="country" class="form-control" type="text" value="United States" disabled>
                                                    </div>
                                                </div>
                                            </div>
                                            <hr class="horizontal dark">
                                            <p class="text-uppercase text-sm">About me</p>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="about" class="form-control-label">About me</label>
                                                        <input id="about" class="form-control" type="text" value="A beautiful Dashboard for Bootstrap 5. It is Free and Open Source." disabled>
                                                    </div>
                                                </div>
                                            </div>

                                            @*TO DO:  TO MAKE THE USER CHANGE THE PICTURE*@

                                            <!-- Profile picture input -->
                                            @*<div class="form-group" id="profilePictureGroup">
                            <label for="profilePicture" class="form-control-label">Profile Picture</label>
                            <input id="profilePicture" class="form-control" type="file" accept="" name="ProfilePicture">
                        </div>*@

                                            <button id="saveButton" type="submit" class="btn btn-primary btn-lg" style="display: none;">Save</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            @* Cards that is on the side *@
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-header pb-0">
                                        <div class="d-flex align-items-center">
                                            <p class="mb-0">Cards</p>
                                            <button id="editButton" class="btn btn-primary btn-sm ms-auto">Edit</button>
                                        </div>
                                    </div>

                                    <div class="card bg-white shadow-xl m-4 card-mask">
                                        <div class="card-body p-1" style="padding: 20px;">
                                            @*<button class="btn btn-primary mb-3">Add Card</button>*@
                                            <i class="fas fa-wifi text-primary mb-3"></i>
                                            <h6 class="text-light mb-3">4562&nbsp;&nbsp;&nbsp;1122&nbsp;&nbsp;&nbsp;4594&nbsp;&nbsp;&nbsp;7852</h6>
                                            <div class="d-flex align-items-center justify-content-between mb-3">
                                                <div class="flex-grow-1">
                                                    <p class="text-light text-xl mb-1">Card Holder</p>
                                                    <h6 class="text-light mb-0">@ViewBag.UserFirstName @ViewBag.UserLastName</h6>
                                                </div>
                                            </div>
                                            <div class="mt-3">
                                                <p class="text-light text-xl mb-0">Expires</p>
                                                <h6 class="text-light mb-0">11/22</h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script>
    // Function to toggle the visibility of the profile picture input
    function toggleProfilePictureInput(visible) {
        var profilePictureGroup = document.getElementById("profilePictureGroup");
        profilePictureGroup.style.display = visible ? "block" : "none";
    }

    // Function to toggle the button text and enable/disable form fields
    function toggleEditMode() {
        var editButton = document.getElementById("editButton");
        var saveButton = document.getElementById("saveButton");
        var formFields = document.querySelectorAll("input");

        if (editButton.innerText === "Edit") {
            editButton.innerText = "Cancel";
            saveButton.style.display = "block";
            formFields.forEach(function (field) {
                field.disabled = false;
            });
            // Show the profile picture input when in editing mode
            toggleProfilePictureInput(true);
        } else {
            editButton.innerText = "Edit";
            saveButton.style.display = "none";
            formFields.forEach(function (field) {
                field.disabled = true;
            });
            // Hide the profile picture input when not in editing mode
            toggleProfilePictureInput(false);
        }
    }

    // Event listener for the edit button
    document.getElementById("editButton").addEventListener("click", function (event) {
        event.preventDefault();
        toggleEditMode();
    });

    // Event listener for the form submission (save button)
    $("#profileForm").submit(function (event) {
        // Prevent the default form submission behavior
        event.preventDefault();

        // Create FormData object to handle file uploads
        var formData = new FormData($(this)[0]); // Select the form itself

        // If a current profile picture exists, append it to the FormData object
        var currentProfilePicture = $("#currentProfilePicture").val();
        if (currentProfilePicture) {
            formData.append("CurrentProfilePicture", currentProfilePicture);
        }

        // Implement AJAX request to update user details
        $.ajax({
            type: "POST",
            url: "@Url.Action("UpdateUserProfile", "MyProfilePage")", // Use Razor syntax to generate the correct URL
            data: formData, // Use the FormData object for file uploads
            contentType: false, // Set contentType to false for file uploads
            processData: false, // Set processData to false for file uploads
            success: function (response) {
                // Reload the page to reflect the changes
                window.location.reload();
            },
            error: function (xhr, status, error) {
                alert("An error occurred while updating the profile.");
                console.error(xhr, status, error);
            }
        });
    });
    </script>
</body>
